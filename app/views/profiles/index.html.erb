<h1>Basic Profiles</h1>

<table>
  <thead>
    <tr>
      <th class="col-md-3">Name</th>
      <th class="col-md-3">About</th>
      <th class="col-md-3">Hometown</th>
      <th class="col-md-3">Current Location</th>
      <th class="col-md-3">Kids</th>
      <th class="col-md-3">Pets</th>
      <th class="col-md-3">Job Title</th>
      <th class="col-md-3">Company</th>
      <th class="col-md-3">School</th>
      <th class="col-md-3">Interests</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td class="col-md-3"><%= profile.name %></td>
        <td class="col-md-3"><%= profile.about %></td>
        <td class="col-md-3"><%= profile.hometown %></td>
        <td class="col-md-3"><%= profile.currentTown %></td>
        <td class="col-md-3"><%= profile.kids %></td>
        <td class="col-md-3"><%= profile.pets %></td>
        <td class="col-md-3"><%= profile.jobTitle %></td>
        <td class="col-md-3"><%= profile.jobCompany %></td>
        <td class="col-md-3"><%= profile.school %></td>
        <td class="col-md-3"><%= profile.interests %></td>
        <td class="col-sm-1"><%= link_to 'Show', profile %></td>
        <td class="col-sm-1"><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td class="col-sm-1"><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

